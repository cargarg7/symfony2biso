{% extends "base.html.twig" %}

{% block title %}Product List{{ parent() }}{% endblock %}

{% block javascript %}
<script src="{{ asset('js/publish.js') }}"></script>
{% endblock %}

{% set pagination %}
    <nav>
        <ul class="pagination">
            <li>
                <a href="{{ path('product_publish', {'page': 1}) }}" aria-label="Previous"{% if page == 1 %} class="disabled"{% endif %}>
                    <span aria-hidden="true">&laquo; primeira</span>
                </a>
            </li>
            <li>
                <a href="{{ path('product_publish', {'page': prev}) }}" aria-label="Previous"{% if page == 1 %} class="disabled"{% endif %}>
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {% for i in pageStart..pages %}
                <li{% if i == page %} class="active"{% endif %}><a href="{{ path('product_publish', {'page': i}) }}">{{ i }}</a></li>
            {% endfor %}
            <li>
                <a href="{{ path('product_publish', {'page': next}) }}" aria-label="Next"{% if page == pages %} class="disabled"{% endif %}>
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            <li>
                <a href="{{ path('product_publish', {'page': last}) }}" aria-label="Next"{% if page == pages %} class="disabled"{% endif %}>
                    <span aria-hidden="true">última &raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
{% endset %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header ex-small">Publicação de Produtos</h2>
        </div>
    </div>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    {{ form_errors(form) }}

        <div class="row">
        <div class="col-md-3">
                <p><strong>Selecione o arquivo CSV para publicação</strong></p>
                <div class="input-group">
                {{ form_errors(form.file) }}
                <span class="input-group-btn">
                    <span class="btn btn-primary btn-file">
                        Arquivo&hellip; {{ form_widget(form.file) }}
                    </span>
                </span>
                    <input type="text" class="form-control" id="publishSelectedFile" readonly>
                </div>
            <span class="help-block"></span>

        </div>
            {{ form_errors(form.market) }}
        <div class="col-md-4" style="border-left: 2px solid #cccccc">
            <p><strong>Selecione o mercado que deseja publicar os produtos.</strong></p>
            <div class="form-group">
                {{ form_widget(form.market) }} {{ form_widget(form.republish) }} Re-Publicação
            </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <input type="submit" class="btn btn-success" value="Publicar">
            </div>
        </div>
    {{ form_end(form) }}

    <br>
    <div id="loads">
        <div class="row">
            <div class="col-md-12">


                <table id="load-report" class="table table-bordered table-striped table-hover table-condensed">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>arquivo</th>
                        <th>usuário</th>
                        <th>parceiro</th>
                        <th>qtd.</th>
                        <th>status</th>
                        <th>re-publicação</th>
                        <th>criado</th>
                        <th>atualizado</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for load in loads %}
                        <tr class="load" data-load-id="{{ load.id }}" data-load-success="0" data-load-error="0">
                            <td>{{ loop.index + counter }}</td>
                            <td>{{ load.name }}</td>
                            <td>{{ load.user.name }}</td>
                            <td>{{ load.market.name }}</td>
                            <td class="extshop-number">{{ load.quantity }}</td>
                            <td class="status extshop-number">
                                <a href="{{ path('product_load_report', {action: 'success', id: load.id}) }}" class="success" style="color:green"></a> |
                                <a href="{{ path('product_load_report', {action: 'error', id: load.id}) }}" class="error" style="color:red"></a> |
                                <span class="fa fa-spinner fa-spin"></span>
                            </td>
                            <td>{% if (load.republish) %} <label class="label label-default">SIM</label>{% endif %}</td>
                            <td class="extshop-date">{{ load.createdAt|date('d/m/Y - H:i') }}</td>
                            <td class="extshop-date">{{ load.updatedAt|date('d/m/Y - H:i') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">Nenhuma publicação para este usuário.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div class="col-md-4 col-md-offset-5">
                    {{ pagination }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
