{% extends "base.html.twig" %}

{% block title %}Login{{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Login</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-2">
            {% if error %}
                <div class="ui error message">
                    <div class="header">Acesso proibido</div>
                    <p>{{ error.messageKey|trans(error.messageData) }}</p>
                </div>
            {% endif %}

            <form action="{{ path('login_check') }}" method="post" class="ui large form">
                <div class="form-group input-group">
                    <span class="input-group-addon">@</span>
                    <input type="text" class="form-control" placeholder="Username" name="_username" value="{{ last_username }}" >
                </div>

                <div class="form-group input-group">
                    <span class="input-group-addon">#</span>
                    <input type="password" class="form-control" placeholder="Password" name="_password" >
                </div>

                <button type="submit" class="btn btn-default">Login</button>
            </form>
        </div>
    </div>
{% endblock %}
