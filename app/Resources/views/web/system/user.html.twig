{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Usuários</h2>
        </div>
    </div>

<div class="row" id="productContent">

    <div class="col-md-3">
        {{ form_start(form) }}
        <div class="form-group">
            <label>Nome</label>
            {{ form_errors(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label>Usuário</label>
            {{ form_errors(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="exampleInputFile">Seller</label>
            {{ form_errors(form.seller) }}
            {{ form_widget(form.seller, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="exampleInputFile">Permissões</label>
            {{ form_errors(form.userRole) }}
            {{ form_widget(form.userRole, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="exampleInputFile">Senha</label>
            {{ form_errors(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button type="submit" class="btn btn-success">Criar Usuário</button>
        {{ form_end(form) }}
    </div>

    <div class="col-lg-12">
        <hr>
        {#{{ pagination }}#}

        <table class="table table-bordered table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Usuário</th>
                    <th>Nome</th>
                    <th>Seller</th>
                    <th>Ativo</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="product-main">
                    <td>{{ loop.index }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.seller.name }}</td>
                    <td>{{ user.isActive }}</td>
                    <td><a href="{{ path("user_edit",{id: user.id}) }}"><button class="btn btn-xs btn-primary">Editar</button></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {#{{ pagination }}#}

    </div>
</div>
{% endblock %}
