{
    "title": "Product Update",
    "type": "object",
    "properties": {
        "status": {
            "type": "string",
            "enum": ["active", "inactive"]
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "price": {
            "type": "number",
